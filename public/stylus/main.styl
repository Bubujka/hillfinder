html 
  height 100% 
body  
  height 100%
  margin 0
  padding 0
#map_canvas 
  height 100%

.finder-pane
  z-index 3
  position absolute
  right 100px
  top 40px
  &__inputs
    span
      width 120px
      font-size: 18px
      font-family arial
      display inline-block
      text-shadow 1px 1px 2px rgba(250,250,250,1)
    input
      padding: 7px 10px
      font-size 14px
  &__height
    font-size 13px
    padding 30px 0px
    display none
    &__big
      font-family georgia
      font-style italic
      font-weight normal
      font-size 46px
      text-align center
      padding 10px 0px
    
    width 300px
  &__button
    padding 7px 10px
  
